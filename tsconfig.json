{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "listFiles": false,
    "outDir": "./lib"
  },
  "filesGlob": [
    "typings/main.d.ts",
    "src/index.ts"
  ],
  "files": [
    "typings/main.d.ts",
    "src/index.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
